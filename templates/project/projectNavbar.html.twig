{% block projectNavbar %}
    <script src="{{ asset('js/delete_project.js') }}"></script>
    <a class="nav-link" href="{{ path('product_backlog', {'projectId': project.id}) }}">Rejestr produktu</a>
    <a class="nav-link" href="#">Sprint</a>
    {% if owner %}
        <a class="nav-link" href="{{ path('add_user_to_project', {'id': project.id}) }}">Dodaj Użytkowników</a>
        <a class="nav-link" href="#" id="opener">Usuń Projekt</a>
        <div class="modal" tabindex="-1" role="dialog" id="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Usuwane projektu</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Czy jesteś pewny, że chcesz usunąć projekt {{ project.name }}?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" value="{{ project.id }}" id="delete">Usuń projekt</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="cancel">Anuluj</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

