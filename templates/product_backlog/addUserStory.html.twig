{% extends 'base.html.twig' %}

{% block title %}Dodaj użytkowników do projektu{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/signin.css') }}" rel="stylesheet">
{% endblock %}
{% use "project/projectNavbar.html.twig" %}
{% block body %}
    <div class="text-center">
        <div class="form-signin">
            <h1 class="h3 mb-3 font-weight-normal">Dodawanie user stories</h1>
            {{ form_start(addUserStory) }}
            {{ form_row(addUserStory.name, {
                label: 'Tytuł user story: '
            },
            ) }}
            {{ form_row(addUserStory.description, {
                label: 'Opis: '
            },
            ) }}
            <button type="submit" class="btn btn-lg btn-primary btn-block">Utwórz User Story</button>
            {{ form_end(addUserStory) }}
        </div>
    </div>
{% endblock %}